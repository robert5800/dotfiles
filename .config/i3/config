        active_workspace        #000000 #000000 #ffffff
        inactive_workspace      #000000 #000000 #ffffff
        urgent_workspace        #BF616A #BF616A #EBCB8B
        }

    	# scroll on the bar to change screen brightness
    	bindsym button4 exec brightnessctl set +1%
