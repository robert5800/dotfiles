bar {
	i3bar_command i3bar --transparency
    status_command i3status
	position top
	tray_output none
	modifier Mod1
    #mode hide
	colors {
        background #000000
        statusline #ffffff
        separator #ffffff
#                background $bg
#                statusline $fg
#                separator $col2
#
#            	#                    border		backgr		text
