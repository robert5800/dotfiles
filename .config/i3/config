## Basic Configuration ##

#workspace_layout tabbed
#title_align center
#default_border pixel
#default_floating_border pixel
for_window [class=".*"] border pixel 0
gaps inner 20
#gaps inner all set 50
smart_borders on
smart_borders no_gaps

font pango:CozetteVector, FontAwesome 9
#font pango:scientifica, Font Awesome 9
# exec feh --bg-scale ~/images/wallpapers/wallp.png 

# Mod1<Alt> Mod4<Win>
set $mod Mod1

## Colors ##

set $bg		#30333d
set $bg1	#292b34
set $fg		#c6c6c6
set $col0	#30333d
set $col1 	#fea3aa
set $col2 	#fbdf90
set $col3 	#74c3e4
set $col4 	#9ce5c0
set $col5 	#b2cefe
set $col6	#c2b4e2
set $col7 	#f2a2e8
set $col8 	#848484
set $col9 	#fea3aa
set $col10 	#fbdf90
set $col11 	#74c3e4
set $col12 	#9ce5c0
set $col13 	#b2cefe
set $col14 	#c2b4e2
set $col15 	#f2a2e8

#						border		backgr		text		indicator	child_border
client.focused          $blue 		$blue 		$darkgray 	$purple 	$darkgray
client.focused_inactive $bg1 	$bg1 	$yellow 	$purple 	$darkgray
client.unfocused        $bg1 	  	$bg1 		$yellow 	$purple 	$darkgray
client.urgent           $red 		$red 		$white 		$red 		$red

## Bar ##

bar {
	status_command i3status
	position top
	tray_output none
	mode hide
	hidden_state hide
	modifier Mod4

    colors {
            background $bg
            statusline $fg
            #                    border		backgr		text
            focused_workspace    $col8		$col8 		$bg
            inactive_workspace   $bg 	$bg 	$fg
            active_workspace     $darkgray 	$darkgray 	$yellow
            urgent_workspace     $red 		$red 		$bg
        }

    # scroll on the bar to change screen brightness
    bindsym button4 exec brightnessctl set +1%
    bindsym button5 exec brightnessctl set 1%-
}


## Keybinds ##

bindsym $mod+q kill
bindsym $mod+r restart
bindsym $mod+e exec "i3-nagbar -t warning -m 'Exit i3?' -B 'Yes' 'i3-msg exit'"

# toggle between tabs
#bindsym Mod1+Tab focus right
workspace_auto_back_and_forth yes

# tiling mode
bindsym $mod+t split toggle
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+u       resize shrink width 10 px or 10 ppt
bindsym $mod+i       resize grow height 10 px or 10 ppt
bindsym $mod+o        resize shrink height 10 px or 10 ppt
bindsym $mod+p      resize grow width 10 px or 10 ppt

# floating mode
floating_modifier $mod
bindsym $mod+space floating toggle
bindsym button3 floating toggle
bindsym $mod+button3 floating toggle
new_window none
new_float normal
hide_edge_borders both
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

# resize floating windows
bindsym $mod+Shift+Left        resize shrink width 10 px or 10 ppt
bindsym $mod+Shift+Down        resize grow height 10 px or 10 ppt
bindsym $mod+Shift+Up          resize shrink height 10 px or 10 ppt
bindsym $mod+Shift+Right       resize grow width 10 px or 10 ppt

# hide status bar
#bindsym $mod+f fullscreen toggle

# change audio volume & screen brightness
set $refresh_i3status killall -SIGUSR1 i3status
bindsym $mod+Delete exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym $mod+Down exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym $mod+Up exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym $mod+Left exec brightnessctl set 5%-
bindsym $mod+Right exec brightnessctl set +5%

# application shortcuts
bindsym $mod+Return exec terminator
bindsym $mod+semicolon exec dmenu_run -fn cozette
bindsym $mod+w exec brave-browser
bindsym $mod+d exec discord
bindsym $mod+g exec pico8
bindsym $mod+m exec minecraft-launcher

# take a screenshot
bindsym Print exec scrot
#bindsym Print exec scrot -s

# mousebindings
bindsym --release button2 kill

## Workspaces ##

